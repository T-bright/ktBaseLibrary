<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dp_25"
    android:layout_marginRight="@dimen/dp_25"
    android:paddingTop="@dimen/dp_27"
    android:background="@drawable/bg_radius_8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="未下载"
        android:textColor="@color/color_33"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_8"
        android:text="未下载满分听说，是否下载?"
        android:textColor="@color/color_99"
        android:textSize="@dimen/sp_15"/>
    <LinearLayout
        android:id="@+id/llSwitch"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_8"
        android:paddingTop="@dimen/dp_18"
        android:paddingEnd="@dimen/dp_18"
        android:paddingStart="@dimen/dp_18"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="未批题设置正确"
            android:textColor="@color/text_9" />
        <androidx.appcompat.widget.SwitchCompat
            android:layout_marginStart="@dimen/dp_32"
            android:id="@+id/switchNotDoneIsRight"
            android:theme="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/et_underline_commondialog"
        android:paddingLeft="@dimen/dp_8"
        android:textColor="@color/color_33"
        android:textColorHint="@color/color_ab"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_27"
        android:background="@color/color_e5"/>

    <LinearLayout
        android:id="@+id/have_two_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_17"/>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/color_e5"/>

        <TextView
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/color_00"
            android:textSize="@dimen/sp_17"/>
    </LinearLayout>

    <TextView
        android:id="@+id/get_it"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center"
        android:text="知道了"
        android:textColor="@color/color_33"
        android:textSize="@dimen/sp_18"
        android:visibility="gone"/>

</LinearLayout>



